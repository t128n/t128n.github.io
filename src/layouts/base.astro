---
import "@/styles/global.css";
import Header from "@/components/header.astro";
import { ClientRouter } from "astro:transitions";

const {
  title = "Torben Haack",
  description = "Engineer of scalable, high-reliability software systems.",
  ogUrl = "https://t128n.github.io",
  showHeader = true,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>{title} [t128n]</title>

    <meta name="description" content={description} />
    <meta name="author" content="Torben Haack" />
    <meta name="robots" content="index, follow" />
    
    <!-- Theme and color -->
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: dark)" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Torben Haack" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@t128n" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- RSS and Sitemap -->
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <ClientRouter />
  </head>

  <body
    class="flex flex-col min-h-dvh font-mono selection:bg-black selection:text-white dark:bg-black dark:text-white dark:selection:bg-white dark:selection:text-black"
  >
    <div class="w-full max-w-[210mm] mx-auto px-4 py-8 flex flex-col gap-8">
      {showHeader && <Header />}
      <main class="flex flex-col gap-8 w-full">
        <slot />
      </main>
      <footer class="mt-auto pt-8 border-t border-gray-200 dark:border-gray-800">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Â© {new Date().getFullYear()} Torben Haack. All rights reserved.
        </p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  /* Make the scrollbar overlay content instead of taking up space */
  html {
    overflow-y: overlay;
    overflow-x: hidden;
    margin-right: 0 !important;
  }

  /* Modern Chrome, Edge, Safari */
  ::-webkit-scrollbar {
    width: 8px;
    position: absolute;
    right: 0;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }

  /* Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.3) transparent;
    scrollbar-gutter: stable;
  }

  /* Ensure content doesn't shift when scrollbar appears */
  body {
    overflow-y: scroll;
    overflow-x: hidden;
    width: 100vw;
    position: relative;
  }
</style>

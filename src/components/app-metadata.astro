---
import avatar from "@/assets/avatar.svg";
import ogImage from "@/assets/og-image.png";
const { name, description } = Astro.props;
const { site } = Astro;

const ogUrl = new URL(`/apps/${Astro.params.slug}`, site).href;
const ogImageUrl = new URL("og-image.png", site).href;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{name} [t128n]</title>
<meta name="description" content={description} />
<meta name="author" content="Torben Haack" />
<meta name="robots" content="noindex, nofollow" />

<meta property="og:title" content={`${name} [t128n]`} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={ogUrl} />
<meta property="og:image" content={ogImageUrl} />

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={`${name} [t128n]`} />
<meta name="twitter:description" content={description} />

<link rel="icon" href={avatar.src} type="image/svg+xml" />

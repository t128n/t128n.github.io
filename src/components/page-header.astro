---
import { Icon } from "astro-icon/components";

interface NavigationLink {
  label: string;
  href: string;
  external?: boolean;
  icon?: string;
}

const navigationLinks: NavigationLink[] = [
  { label: "About", href: "/about", icon: "user" },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/torben-haack/",
    external: true,
    icon: "suitcase",
  },
  {
    label: "GitHub",
    href: "https://github.com/t128n",
    external: true,
    icon: "github",
  },
  {
    label: "Email",
    href: "mailto:t128n@ipv4.8shield.net",
    external: true,
    icon: "at",
  },
];
const isActive = (href: string) => {
  return (
    Astro.url.pathname === href || Astro.url.pathname.startsWith(`${href}/`)
  );
};
---

<header>
  <section>
    <a href="/" tabindex="0">
      <span>torben haack</span>
      <span>[t128n]</span>
    </a>
  </section>
  <nav>
    <span>
      {
        navigationLinks.map((link, index) => (
          <span>
            {index > 0 && " | "}
            <a
              href={link.href}
              {...(link.external
                ? { target: "_blank", rel: "noopener noreferrer" }
                : {})}
              tabindex="0"
              class:list={[
                { "active": isActive(link.href) },
              ]}
            >
              {link.label.toLowerCase()}
            </a>
          </span>
        ))
      }
    </span>
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: var(--space-4) 0;
    border-bottom: var(--border-width) var(--border-style) var(--color-border);
    margin-bottom: var(--space-6);
  }
  
  header section a {
    text-decoration: none;
    color: var(--color-text);
  }
  
  header section a:hover {
    color: var(--color-accent);
  }
  
  header section a span:first-child {
    font-weight: 500;
  }
  
  header section a span:last-child {
    color: var(--color-text-secondary);
    margin-left: var(--space-2);
  }

  header nav span {
    font-size: var(--text-sm);
  }

  header nav a {
    text-decoration: none;
    color: var(--color-text-secondary);
  }
  
  header nav a:hover,
  header nav a.active {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    header {
      flex-direction: column;
      gap: var(--space-3);
      align-items: flex-start;
    }
    
    header nav span {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-1);
    }
  }
</style>

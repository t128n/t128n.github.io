---
import { Icon } from "astro-icon/components";

interface FooterLink {
  label: string;
  href: string;
  external?: boolean;
  icon?: string;
}

const footerLinks: FooterLink[] = [
  { label: "Feed", href: "/feed", icon: "timeline" },
  { label: "Search", href: "/search", icon: "search" },
  { label: "RSS", href: "/rss.xml", icon: "radio-signal" },
];
---

<footer>
  <p>&copy; 2025 Torben Haack [t128n]</p>
  <nav aria-label="Footer navigation">
    <ul>
      {
        footerLinks.map((link) => (
          <li>
            <a
              href={link.href}
              {...(link.external
                ? { target: "_blank", rel: "noopener noreferrer" }
                : {})}
              aria-label={`Footer link to ${link.label}`}
            >
              {link.icon && (
                <Icon
                  name={`pixelarticons:${link.icon}`}
                  width="1em"
                  height="1em"
                  aria-hidden="true"
                />
              )}
              <span>{link.label}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>

<style>
  footer {
    padding: var(--space-md);
    border-top: 1px solid var(--color-ui-2);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  footer > p {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-tx-2);
    margin: 0;
  }

  footer nav ul {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    padding: 0;
    margin: 0;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }

  footer nav ul li a {
    display: flex;
    align-items: center;
    gap: 0.25em;
    color: var(--color-tx-2);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  footer nav ul li a:hover,
  footer nav ul li a:focus {
    color: var(--color-primary);
  }

  @media (min-width: 40rem) {
    footer {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

---
interface BadgeProps {
  variant?: "note" | "success" | "warning" | "error" | "primary";
}

const { variant = "note" } = Astro.props as BadgeProps;
---

<span data-badge={variant}>
  <slot />
</span>

<style>
  span {
    color: var(--color-bg);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 0.5rem;
    background-color: var(--color-or);
  }
  span[data-badge="success"] {
    background-color: var(--color-success);
  }
  span[data-badge="warning"] {
    background-color: var(--color-warning);
  }
  span[data-badge="error"] {
    background-color: var(--color-danger);
  }
  span[data-badge="primary"] {
    background-color: var(--color-primary);
  }
</style>
